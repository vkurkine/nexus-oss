  <build>
    <plugins>
      <!--
      FIXME: Get rid of test-jar, these artifacts cause problems with transitive dependencies.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <!-- model classes will be merged in as a fragment at runtime -->
          <excludeDependencies>nexus-configuration-model</excludeDependencies>
          <instructions>
            <!-- include the OSGi JDBC compendium package as it's needed by H2 -->
            <Export-Package>{local-packages},org.osgi.service.jdbc</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

